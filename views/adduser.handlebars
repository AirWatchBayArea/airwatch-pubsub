<h1>Subscribe to Notification</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/user/add">
<div class="form-group">
 <label>Email</label>
 <input type="text" name="email" class="form-control" placeholder="Email" required="">
</div>
<div class="form-group">
 <label>Phone Number</label>
 <input type="text" name="phone" class="form-control" placeholder="Phone Number" required="">
</div>
<div class="form-group">
 <label>Pollution Type</label>
 <select type="text" name="pollution" class="form-control" placeholder="Pollution Type" required="">
  <option value="Smell">Smell</option>
  <option value="Dust">Dust</option>
  <option value="Sulphuric Smell">Sulphuric Smell</option>
  <option value="Hot Ground">Hot Ground</option>
</select>
</div>
<div class="form-group">
 <label>Location</label>
 <select type="text" name="area" class="form-control" placeholder="Location you subscribed to" required="">
  <option value="Bay Area">Bay Area</option>
  <option value="Lagos">Lagos</option>
  <option value="San Francisco">San Francisco</option>
  <option value="Oakland">Oakland</option>
</select>
</div>
<input type="submit" class="btn btn-primary" value="Subscribe">
</form>